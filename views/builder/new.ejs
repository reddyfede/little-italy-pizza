<%- include('../partials/header') %>
  <link rel="stylesheet" href="/stylesheets/builder.css">
  <script src="/javascripts/builder.js" defer></script>
  <div class="container">
    <div class="row">
      <div class="col">
        <form id="form-builder" action=" /order/builder/" method="post">
          <div class="row g-3">
            <div class="col-sm-6">
              <fieldset>
                <legend>Size:</legend>
                <input type="radio" id="large" name="size" value="Large" checked>
                <label for="large">Large</label><br>
                <input type="radio" id="medium" name="size" value="Medium">
                <label for="medium">Medium</label><br>
                <input type="radio" id="small" name="size" value="Small">
                <label for="small">Small</label>
              </fieldset>
            </div>
            <div class="col-sm-6">
              <fieldset>
                <legend>Crust:</legend>
                <input type="radio" id="thin" name="crust" value="Thin">
                <label for="thin">Thin</label><br>
                <input type="radio" id="regular" name="crust" value="Regular" checked>
                <label for="regular">Regular</label><br>
                <input type="radio" id="deepdish" name="crust" value="Deepdish">
                <label for="deepdish">Deep Dish</label>
              </fieldset>
            </div>
            <div class="col-sm-6">
              <fieldset>
                <legend>Sauce:</legend>
                <input type="radio" id="marinara" name="sauce" value="Marinara" checked>
                <label for="marinara">Marinara</label><br>
                <input type="radio" id="bbq" name="sauce" value="BBQ">
                <label for="bbq">BBQ</label><br>
                <input type="radio" id="buffalo" name="sauce" value="Buffalo">
                <label for="buffalo">Buffalo</label>
              </fieldset>
            </div>
            <div class="col-sm-6">
              <fieldset>
                <legend>Cut:</legend>
                <input type="radio" id="normal" name="cut" value="Normal" checked>
                <label for="normal">Normal</label><br>
                <input type="radio" id="square" name="cut" value="Square">
                <label for="square">Square</label>
              </fieldset>
            </div>
            <div class="col-sm-6">
              <fieldset>
                <legend>Cheese:</legend>
                <input type="radio" id="normal" name="cheese" value="Normal" checked>
                <label for="normal">Normal</label><br>
                <input type="radio" id="light" name="cheese" value="Light">
                <label for="light">Light</label><br>
                <input type="radio" id="extra" name="cheese" value="Extra">
                <label for="extra">Extra</label><br>
                <input type="radio" id="extra" name="cheese" value="No">
                <label for="extra">No Cheese</label>
              </fieldset>
            </div>
          </div>
          <div class="row g-3">
            <div class="col-sm-6">
              <fieldset>
                <legend>Meats:</legend>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Anchovies" id="anchovies" name="meats">
                  <label class="form-check-label" for="anchovies">
                    Anchovies
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Sausage" id="sausage" name="sausage">
                  <label class="form-check-label" for="sausage">
                    Sausage
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="italianSausage" id="italianSausage"
                    name="meats">
                  <label class="form-check-label" for="sausage">
                    Spicy Italian Sausage
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Bacon" id="bacon" name="meats">
                  <label class="form-check-label" for="bacon">
                    Bacon
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Pepperoni" id="pepperoni" name="meats">
                  <label class="form-check-label" for="pepperoni">
                    Pepperoni
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Chicken" id="chicken" name="meats">
                  <label class="form-check-label" for="chicken">
                    Grilled Chicken
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Salami" id="salami" name="meats">
                  <label class="form-check-label" for="salami">
                    Salami
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Philly Steak" id="steak" name="meats">
                  <label class="form-check-label" for="steak">
                    Philly Steak
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Ham" id="ham" name="meats">
                  <label class="form-check-label" for="ham">
                    Canadian Bacon
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Beef" id="beef" name="meats">
                  <label class="form-check-label" for="beef">
                    Beef
                  </label>
                </div>

                <div class="form-check">
                  <input class="form-check-input" type="checkbox" value="Meatballs" id="meatball" name="meats">
                  <label class="form-check-label" for="meatball">
                    Meatball
                  </label>
                </div>

              </fieldset>
            </div>
            <div class="col-sm-6">
              <fieldset>
                <legend>Veggies:</legend>
                <div>
                  <input type="checkbox" id="roma" name="veggies" value="Roma Tomatoes" />
                  <label for="roma">Roma Tomatoes</label>
                </div>

                <div>
                  <input type="checkbox" id="greenOlive" name="veggies" value="Green Olives" />
                  <label for="greenOlive">Green Olive</label>
                </div>

                <div>
                  <input type="checkbox" id="onion" name="veggies" value="Onions" />
                  <label for="onion">Onion</label>
                </div>


                <div>
                  <input type="checkbox" id="blackOlive" name="veggies" value="Black Olives" />
                  <label for="blackOlive">Black olive</label>
                </div>

                <div>
                  <input type="checkbox" id="greenPeppers" name="veggies" value="Green Peppers" />
                  <label for="greenPeppers">Green Peppers</label>
                </div>

                <div>
                  <input type="checkbox" id="pineapple" name="veggies" value="Pineapple" />
                  <label for="pineapple">Pineapple</label>
                </div>


                <div>
                  <input type="checkbox" id="bananaPeppers" name="veggies" value="Banana Peppers" />
                  <label for="bananaPeppers">Banana Peppers</label>
                </div>

                <div>
                  <input type="checkbox" id="spinach" name="veggies" value="Spinach" />
                  <label for="spinach">Spinach</label>
                </div>

                <div>
                  <input type="checkbox" id="jalapenoPeppers" name="veggies" value="Jalapeno Peppers" />
                  <label for="jalapenoPeppers">Jalapeno Peppers</label>
                </div>

                <div>
                  <input type="checkbox" id="mushroom" name="veggies" value="Mushrooms" />
                  <label for="mushroom">Mushroom</label>
                </div>

              </fieldset>
            </div>
          </div>
          <label>Quantity:
            <input type="Number" name="quantity" min="1" max="99" step="1" value="1">
          </label>

          <button type="submit" class="btn btn-primary btn-sm">Add to Deal</button>
        </form>
        <form action="/order" method="GET">
          <button type="submit" class="btn btn-secondary btn-sm">Cancel</button>
        </form>
      </div>
      <div class="col">
        <div id="builder"></div>
      </div>
    </div>
  </div>
  </div>
  <%- include('../partials/footer') %>